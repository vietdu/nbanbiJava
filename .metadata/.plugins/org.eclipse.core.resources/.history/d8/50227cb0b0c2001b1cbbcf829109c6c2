package nv.nbb;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.sql.*;

@WebServlet(urlPatterns = {"/dangky"})
public class dangky extends HttpServlet {
	private String ten;
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		resp.setContentType("text/html");
		this.ten = req.getParameter("ten");
		System.out.println(ten);
		PrintWriter pw = resp.getWriter();
		pw.println("vietdu");
		 Connection conn = null;
		 Statement st = null;
		 ResultSet rs = null;
		try {
		 String dbURL = "jdbc:mysql://localhost/duich";
		 String username = "root";
		 String password = "";
		 conn = DriverManager.getConnection(dbURL, username, password);
		 if (conn != null) {
		  System.out.println("Kết nối thành công");
		 }
	
		 String sql = "select * from timchuyenbay ";
		
		 st = conn.createStatement();

		 rs = st.executeQuery(sql);

		 while (rs.next()) {
	
				String id = rs.getString(1);
				String hang = rs.getString(2);
				String thoigian = rs.getString(3);
				String chuyenbay = rs.getString(3);
				String gia = rs.getString(3);
				System.out.println( id + hang + thoigian+chuyenbay+gia);
		 }
	
		} catch (Exception e) {
		  e.printStackTrace();
		}
	}

	}
	


