package nv.nbb;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.Enumeration;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.Cookie;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;


@WebServlet(urlPatterns = {"/nhi"})
public class HelloServlet extends HttpServlet {
	@Override
	public void init() throws ServletException {
		System.out.println("mo servlet");
	}
	@Override
	public void destroy() {
		System.out.println("dong servlet");
	}
@Override
protected void service(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
	// TODO Auto-generated method stub
	super.service(req, resp);
	System.out.println("phuong thuc cua request"+req.getMethod());
}

@Override
protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
	resp.setContentType("text/html");
	PrintWriter writer = resp.getWriter();
	writer.println("<h1>To Thao Nhi</h1>");
	writer.close();
	Enumeration<String> keys=req.getHeaderNames();
	while (keys.hasMoreElements()) {
		String key =keys.nextElement();
		System.out.println(key + " ; " +req.getHeader(key));
		
	}
	
	resp.addCookie(new Cookie(getServletName(), getServletInfo()));
	resp.addHeader(getServletName(), getServletInfo());
	resp.sendError(200);
}
}
