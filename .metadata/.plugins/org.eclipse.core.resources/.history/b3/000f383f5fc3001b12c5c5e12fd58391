package vn.nbb.quanly;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import nv.nbb.connectdata;

public class htmlBanner {
	private String htmlbn="";
	public String getHtmlBanner() {
	try {
		Connection con = connectdata.getCon();
	
		PreparedStatement ps = con.prepareStatement("");
		ResultSet rs = ps.executeQuery();
		
		

		while(rs.next())
		{
			
			String tieude = rs.getString(1);
			String noidung = rs.getString(2);
			String anh = rs.getString(3);
	

			htmlbn = htmlbn+"<br> 		+ \"                <div id='myCarousel' class='carousel slide carousel-fade' data-ride='carousel'>\\r\\n\"\r\n"
					+ "				+ \"                    <div class='carousel-inner'>\\r\\n\"\r\n"
					+ "				+ \"                        <div class='carousel-item active'>\\r\\n\"\r\n"
					+ "				+ \"                            <div class='mask flex-center'>\\r\\n\"\r\n"
					+ "				+ \"                                <div class='container'>\\r\\n\"\r\n"
					+ "				+ \"                                    <div class='row align-items-center'>\\r\\n\"\r\n"
					+ "				+ \"                                        <div class='col-md-7 col-12 order-md-1 order-2'>\\r\\n\"\r\n"
					+ "				+ \"             \\r\\n\"\r\n"
					+ "				+ \"                                            <h4>"+tieude+"</h4>\\r\\n\"\r\n"
					+ "				+ \"                                            <p>"+noidung+"</p> <br> <a href='#Booking'>ĐẶT NGAY</a>\\r\\n\"\r\n"
					+ "				+ \"                                        </div>\\r\\n\"\r\n"
					+ "				+ \"                                        <div class='col-md-5 col-12 order-md-2 order-1'><img src='"+anh+"'class='mx-auto' alt='slide'></div>\\r\\n\"\r\n"
					+ "				+ \"                                    </div>\\r\\n\"\r\n"
					+ "				+ \"                                </div>\\r\\n\"\r\n"
					+ "				+ \"                            </div>\\r\\n\"\r\n"
					+ "				+ \"                        </div>\\r\\n\"";
		
		}
	
		

	}
	catch(Exception e)
	{
		e.printStackTrace();
	}
	return htmlbn;
	
	}
}


